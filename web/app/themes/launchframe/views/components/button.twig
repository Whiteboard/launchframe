<{{ tag ? tag : "a" }}
    {{ attribute }}
    class="inline-flex items-center rounded px-8 py-4
    text-xs leading-none tracking-wider font-expanded font-bold uppercase select-none whitespace-no-wrap cursor-pointer transition duration-300 ease-in-out hover:scale-105

    {% if style == 'secondary' %}
    border-2 {{ border ? border : 'border-red-600' }} {{ color ? color : 'text-red-600' }}
    {% else %}
    bg-red-600 {{ color ? color : 'text-white' }}
    {% endif %}

    {{ class }}"

    {% if not faux %}
        {% include "components/button_attributes.twig" %}
    {% endif %}
>
    {{ label }}
</{{ tag ? tag : "a" }}>

