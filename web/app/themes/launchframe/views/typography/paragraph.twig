<{{ tag ? tag : "p" }}
    {{ attribute }}
    class="{{ color ? color : 'text-current' }}

    {% if size == 'xs' %}
        text-xs
    {% elseif size == 'sm' %}
        text-sm
    {% elseif size == 'lg' %}
        text-lg
    {% else %}
        text-base
    {% endif %}

    {% if style == 'label' %}
        font-bold uppercase tracking-wide
    {% endif %}

    {# :: Default Paragraph Margin ------------ #}
    {{ m_reset ? '' : 'mt-0 mb-8 last:mb-0' }}

    {{ class }}"
>
    {{ content }}
</{{ tag ? tag : "p" }}>
