{
    "extends": ["plugin:prettier/recommended"],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "impliedStrict": true,
            "globalReturn": false,
            "classes": true
        }
    },
    "env": {
        "browser": true,
        "node": true,
        "jquery": true,
        "jest": true
    },
    "plugins": ["prettier"],
    "rules": {
        "indent": [2, 4],
        "comma-dangle": [2, "never"],
        "complexity": [1, 5],
        "func-names": 0,
        "import/prefer-default-export": 0,
        "no-console": 0,
        "no-unused-vars": 0,
        "no-undef": 0,
        "object-curly-newline": [
            0,
            {
                "multiline": true
            }
        ],
        "object-shorthand": 0,
        "prettier/prettier": "error",
        "quotes": [
            2,
            "single",
            {
                "avoidEscape": true,
                "allowTemplateLiterals": true
            }
        ]
    }
}
