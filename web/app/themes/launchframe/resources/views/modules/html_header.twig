<head>
    <title>
         {% if wp_title %}
            {{ wp_title }}
        {% else %}
            {{ site.name }}
        {% endif %}
    </title>
    <meta charset="{{ site.charset }}" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">

    <link rel="pingback" href="{{ site.pingback_url }}" />

    {{ function("wp_head") }}

    {% if globals.google_analytics_snippet and globals.google_tag_id %}
        {{ globals.google_analytics_snippet }}
        <template x-data x-init="$store.googleAnalytics.setTagID('{{ globals.google_tag_id }}')"></template>
    {% endif %}
</head>
