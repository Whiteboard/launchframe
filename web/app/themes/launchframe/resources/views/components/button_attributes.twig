{% if action == "url" %}
    href="{{ url }}"
{% elseif action == "entry" %}
    href="{{ entry }}"
{% elseif action == "email" %}
    href="mailto:{{ email }}"
{% elseif action == "phone" %}
    href="tel:{{ phone }}"
{% elseif action == "asset" %}
    href="{{ asset }}" download
{% elseif action == "anchor" %}
    onclick="document.getElementById('{{ anchor }}')?.scrollIntoView({ behavior: 'smooth', block: 'center', inline: 'nearest' })"

{% elseif action == "video" and video_source %}
    @click="() => {
        $store.lightboxVideo.source = '{{ video_source }}';
        $store.lightboxVideo.videoID = '{{ video_id }}';
        $store.lightboxVideo.mp4 = '{{ video_mp4 }}';
        $store.lightboxVideo.webm = '{{ video_webm }}';
        $store.lightboxVideo.poster = '{{ video_poster }}';
        $store.lightboxVideo.videoStart = '{{ video_start }}';
        $store.lightboxVideo.open = true;
    }"

{% elseif action == "video_toggle" %}
    @click="() => {
        $store.lightboxVideo.open = true;
    }"
{% endif %}

{% if new_window %}
    rel="noopener" target="_blank"
{% endif %}

{% if attr_title %}
    title="{{ attr_title }}"
{% endif %}

{% if attr_aria %}
    aria-label="{{ attr_aria }}"
{% endif %}


