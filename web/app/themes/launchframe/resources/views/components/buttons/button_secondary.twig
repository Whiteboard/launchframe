{#
    @name Secondary Button
    @desc Rounded outline button
    @type component
#}

<div
    data-button
    class="inline-flex"
>
    {% if magnetic %}
        <div
            x-data="magnetic()"
            x-ref="element"
            @mousemove="magnetize($event, $el, $refs.element, 10)"
            @mouseleave="demagnetize($refs.element)"
            class="relative inline-flex hover:z-10"
        >
    {% endif %}

    <{{ as ?: "a" }}
        {{ attribute }}
        class="
            {{ size == 'small' ? 'px-4 py-3 text-sm' : 'px-10 py-4'}}
            {{ color ?: 'text-current' }}
            {{ border_color ?: 'border-primary-400' }}
            {{ hover ?: 'lg:hover:border-primary-600 lg:hover:text-primary' }}
            {{ class }}
            inline-flex items-center justify-center
            rounded-3xl font-bold border
            leading-none select-none whitespace-nowrap cursor-pointer
            focus:outline-none focus-visible:ring focus-visible:ring-primary-400/50
            transition group
        "
        {% if not faux %}
            {% include "components/link_attributes.twig" %}
        {% endif %}
    >
        {{ label }}
        {% if new_window %}
            {% if new_window %}
                <span class="ml-2 w-3 transition lg:group-hover:translate-x-2">
                    {{ source("resources/images/arrow.svg") }}
                </span>
            {% endif %}
        {% endif %}
    </{{ as ?: "a" }}>

    {% if magnetic %}
        </div>
    {% endif %}
</div>
