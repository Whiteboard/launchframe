{#
    @name Nav Toggle Button
    @desc Toggles the nav overlay
    @type component
#}

<button
    title="Toggle Navigation"
    @click.prevent="
        $store.navigator.open = true;
        $store.scroll(false);
    "
    class="
        w-10 md:w-8 p-2
        lg:hover:bg-secondary border
        text-current lg:hover:text-primary
        transition duration-75
        group
    "
    :class="{
        '!border-primary-400' : sticky,
        'border-secondary' : !sticky && $store.header.border_color === 'primary' || $store.header.border_color === 'primary_dark',
        'border-primary-400' : !sticky && $store.header.border_color === 'white' || $store.header.border_color === 'neutral',
    }"
>
    <div class="flex flex-col justify-center space-y-[4px]">
        {% for item in range(1, 3) %}
            <div
                class="
                    w-full h-[2px]
                    lg:group-hover:bg-primary group-focus:bg-secondary
                    transition duration-75
                "
                :class="{
                    'bg-white' : $store.header.theme === 'dark',
                    'bg-primary-800' : $store.header.theme === 'light',
                    '!bg-primary-900' : sticky,
                }"
            ></div>
        {% endfor %}
    </div>
</button>
