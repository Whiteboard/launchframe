{#
    @name Nav Footer Item
    @desc Nav item used in the footer navigation
    @type component
#}

<li data-nav-item>
    <a
        class="
            relative
            text-sm font-bold leading-none
            transition duration-300 ease-in-out
            lg:hover:text-secondary
        "
        href="{{ item.link }}"
    >
        {{ item.title }}
    </a>
</li>
