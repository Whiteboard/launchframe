{% if image %}
    {% if size == "1:1" %}
        <picture>
            <source
                srcset="
                    {{ image | resize(2500, 2500) }} 2500w,
                    {{ image | resize(1920, 1920) }} 1920w,
                    {{ image | resize(1600, 1600) }} 1600w,
                    {{ image | resize(1440, 1440) }} 1440w,
                    {{ image | resize(1320, 1320) }} 1320w,
                    {{ image | resize(1200, 1200) }} 1200w,
                    {{ image | resize(1024, 1024) }} 1024w,
                    {{ image | resize(800, 800) }} 800w,
                    {{ image | resize(600, 600) }} 600w,
                    {{ image | resize(375, 375) }} 375w"
                sizes="auto"
            >
            <img
                src="{{ image | resize(800, 800) }}"
                alt="{{ alt }}"
                loading="{{ loading ? loading : 'lazy' }}"
            >
        </picture>

    {% else %}
        <picture>
            <source
                srcset="
                    {{ image | towebp | resize(2500)  }} 2500w,
                    {{ image | towebp | resize(1920)  }} 1920w,
                    {{ image | towebp | resize(1600) }} 1600w,
                    {{ image | towebp | resize(1440) }} 1440w,
                    {{ image | towebp | resize(1320) }} 1320w,
                    {{ image | towebp | resize(1200) }} 1200w,
                    {{ image | towebp | resize(1024) }} 1024w,
                    {{ image | towebp | resize(800) }} 800w,
                    {{ image | towebp | resize(600) }} 600w,
                    {{ image | towebp | resize(375) }} 375w"
                sizes="auto"
                type="image/webp"
            >

            <img
                class="absolute inset-0 w-full h-full object-cover"
                src="{{ image | resize(800) }}"
                alt="{{ alt }}"
                loading="{{ loading ? loading : 'lazy' }}"
            >
        </picture>
    {% endif %}
{% endif %}
