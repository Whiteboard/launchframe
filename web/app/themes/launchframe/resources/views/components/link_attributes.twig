{#
    @name Link Attributes
    @type component
#}

{% if action == "url" %}
    href="{{ url }}"
{% elseif action == "entry" %}
    href="{{ entry }}"
{% elseif action == "email" %}
    href="mailto:{{ email }}"
{% elseif action == "phone" %}
    href="tel:{{ phone }}"
{% elseif action == "asset" %}
    href="{{ asset }}" download
{% elseif action == "anchor" %}
    @click="$store.scroll.handleScrollToElement(document.getElementById('{{ anchor }}'))"
{% elseif action == "alpine_url" %}
    :href="{{ alpine_href }}"
{% endif %}

{% if new_window %}
    rel="noopener" target="_blank"
{% endif %}

{% if attr_title %}
    title="{{ attr_title }}"
{% endif %}

{% if attr_aria %}
    aria-label="{{ attr_aria }}"
{% endif %}

{% if force_reload %}
    data-portal-prevent="self"
{% endif %}