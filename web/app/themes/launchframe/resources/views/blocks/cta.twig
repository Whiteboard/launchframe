{% set style = blockset.style %}

<div class="fluid-container {% include "snippets/no_block_spacing.twig" %}" id="{{ id }}">
    <div class="bg-primary px-6 md:px-16 xl:px-24 py-16 md:py-24 text-white rounded">

        {% if style == 'centered' %}
            {% include "components/intro.twig" with {
                overline: blockset.overline,
                title: blockset.title,
                subtitle: blockset.subtitle
            }%}
            {% if blockset.buttons|length > 0 %}
                <div class="flex items-center justify-center flex-wrap gap-6 mt-16">
                    {% include "components/buttons.twig" with {
                        buttons: blockset.buttons,
                        hoverColor: 'hover:bg-white hover:text-primary'
                    } %}
                </div>
            {% endif %}
        
        {% else %}

            <div class="lg:flex justify-between items-center">
                <div class="basis-2/3">
                    {% include "components/intro.twig" with {
                        overline: blockset.overline,
                        title: blockset.title,
                        subtitle: blockset.subtitle,
                        sectionClass: 'text-center lg:text-left',
                        textClass: 'w-auto'
                    }%}
                </div>
                <div class="basis-1/3 flex-shrink">
                    {% if blockset.buttons|length > 0 %}
                        <div class="flex items-center flex-wrap gap-6 mt-16 justify-center xl:justify-end">
                            {% include "components/buttons.twig" with {
                                buttons: blockset.buttons,
                                hoverColor: 'hover:bg-white hover:text-primary'
                            } %}
                        </div>
                    {% endif %}
                </div>
            </div>

            {% endif %}

    </div>
</div>