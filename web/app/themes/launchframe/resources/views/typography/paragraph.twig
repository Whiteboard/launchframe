<{{ as ? as : "p" }}
    {{ attribute }}
    class="
        {{ color ?: 'text-current' }}
        {{ margin ?: 'mt-0 mb-8 last:mb-0' }}
        {{ class }}
        {% if style == 'overline' %}
            text-xs font-bold uppercase
        {% elseif size == 'xl' %}
            text-xl lg:text-2xl
        {% elseif size == 'lg' %}
            text-lg
        {% elseif size == 'sm' %}
            text-sm
        {% else %}
            text-base
        {% endif %}
    "
>
    {{ content }}
</{{ as ? as : "p" }}>
