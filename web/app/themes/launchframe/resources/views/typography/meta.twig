{#
    @name Meta
    @desc The typography meta partial to render an meta.
    @param* content - The meta content.
    @param as - The wrapping element. Defaults to `span`.
    @param size - The font size utility.
    @param color - Set a custom text color utility. Falls back to `text-inherit`.
    @param line_height - Set a custom line height utility. Falls back to `leading-normal`.
    @param letter_spacing - Set a custom letter spacing utility. Falls back to `tracking-wide`.
    @param class - Add custom CSS classes.
    @param attribute - Add custom JS.
    @type Typography
#}

<{{ as ?: "span" }}
    {{ attribute }}

    class="
        {% if size == 'lg' %}
            text-sm lg:text-xs
        {% else %}
            {{ size ?: "text-2xs lg:text-3xs" }}
        {% endif %}
        {{ color or "text-inherit" }}
        {{ line_height or "leading-normal "}}
        {{ letter_spacing or "tracking-wide" }}
        {{ class }}
        font-mono
        font-normal
        uppercase
    "
>
    {{ content }}
</{{ as ?: "span" }}>
