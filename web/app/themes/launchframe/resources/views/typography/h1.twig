{#
    @name H1
    @desc The typography meta partial to render an meta.
    @param* content - The meta content.
    @param as - The wrapping element.
    @param size - The font size utility.
    @param color - Set a custom text color utility.
    @param weight - Set a custom font weight utility.
    @param line_height - Set a custom line height utility.
    @param letter_spacing - Set a custom letter spacing utility.
    @param class - Add custom CSS classes.
    @param attribute - Add custom JS.
    @type typography
#}

<{{ as ?: "h1" }}
    {{ attribute }}
    class="
        {{ size ?: 'text-4xl sm:text-5xl md:text-6xl lg:text-7xl' }}
        {{ color ?: 'text-current' }}
        {{ weight ?: 'font-bold' }}
        {{ line_height ?: 'leading-none'}}
        {{ letter_spacing ?: 'tracking-normal' }}
        {{ class }}
        font-sans
    "
>
    {{ content }}
</{{ as ?: "h1" }}>
