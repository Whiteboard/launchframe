{
    "name": "whiteboard/launchframe",

    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org",
             "only": ["wpackagist-plugin/*", "wpackagist-theme/*"]
        }
    ],

    "require": {
        "php": ">=8.0",
        "composer/installers": "^2.2",
        "roots/soil": "^4.1.1",
        "roots/wordpress": "6.0.2",
        "roots/wp-config": "1.0.0",
        "roots/wp-password-bcrypt": "1.1.0",
        "vlucas/phpdotenv": "^5.4",
        "wpackagist-plugin/all-in-one-wp-migration": "^7.65",
        "wpackagist-plugin/autodescription": "^4.2.5",
        "wpackagist-plugin/duplicate-post": "^4.5",
        "wpackagist-plugin/goodbye-captcha": "^3.1.43",
        "wpackagist-plugin/minify-html-markup": "^2.02"
    },

    "require-dev": {
        "squizlabs/php_codesniffer": "^3.4.2",
        "roave/security-advisories": "dev-master"
    },

    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },

    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "installer-paths": {
            "web/app/mu-plugins/{$name}/": [
                "type:wordpress-muplugin"
            ],
            "web/app/plugins/{$name}/": [
                "type:wordpress-plugin"
            ],
            "web/app/themes/{$name}/": [
                "type:wordpress-theme"
            ]
        },
        "wordpress-install-dir": "web/wp"
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "test": [
            "phpcs"
        ]
    }
}
