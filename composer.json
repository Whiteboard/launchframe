{
    "name": "whiteboard/launchframe",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Brett Bash",
            "email": "brett@whiteboard.is",
            "homepage": "https://whiteboard.is"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org",
            "only": ["wpackagist-plugin/*", "wpackagist-theme/*"]
        }
    ],
    "require": {
        "php": ">=7.2",
        "composer/installers": "^1.8",
        "oscarotero/env": "^2.1",
        "rareloop/lumberjack-core": "^4.3",
        "roots/bedrock-autoloader": "^1.0",
        "roots/soil": "^3.8",
        "roots/wordpress": "5.5.3",
        "roots/wp-config": "1.0.0",
        "roots/wp-password-bcrypt": "1.0.0",
        "vlucas/phpdotenv": "^4.1.8",
        "wpackagist-plugin/acf-extended": "^0.8.7.3",
        "wpackagist-plugin/autodescription": "^4.1.1",
        "wpackagist-plugin/duplicate-post": "^3.2.6",
        "wpackagist-plugin/goodbye-captcha": "^3.1.43",
        "wpackagist-plugin/minify-html-markup": "^1.99",
        "wpackagist-plugin/safe-redirect-manager": "^1.9.3",
        "wpackagist-plugin/timber-library": "^1.18.2",
        "wpackagist-plugin/wp-optimize": "^3.1.4"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5.6",
        "roave/security-advisories": "dev-master"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "installer-paths": {
            "web/app/mu-plugins/{$name}/": [
                "type:wordpress-muplugin"
            ],
            "web/app/plugins/{$name}/": [
                "type:wordpress-plugin"
            ],
            "web/app/themes/{$name}/": [
                "type:wordpress-theme"
            ]
        },
        "wordpress-install-dir": "web/wp"
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "test": [
            "phpcs"
        ]
    }
}
