{
		"env": {
				"browser": true,
				"commonjs": true,
				"es6": true,
				"jest": true
		},
		"extends": "eslint:recommended",
		"parserOptions": {
				"sourceType": "module"
		},
		"rules": {
        "no-console": [
          "error", { "allow": ["warn", "error"] }
        ],
				"indent": [
						"error",
            2
				],
				"linebreak-style": [
						"error",
						"unix"
				],
				"quotes": [
						"error",
						"double"
				],
        "semi": [
            "error", "never"
        ]
		}
}
